{% extends 'base.html.twig' %}

{% block title %}Targets index{% endblock %}

{% block body %}
    <h1>Targets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>FirstName</th>
                <th>Birthdate</th>
                <th>CodeName</th>
                <th>Nationality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for target in targets %}
            <tr>
                <td>{{ target.id }}</td>
                <td>{{ target.lastname }}</td>
                <td>{{ target.firstName }}</td>
                <td>{{ target.birthdate ? target.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ target.codeName }}</td>
                <td>{{ target.nationality }}</td>
                <td>
                    <a href="{{ path('targets_show', {'id': target.id}) }}">show</a>
                    <a href="{{ path('targets_edit', {'id': target.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('targets_new') }}">Create new</a>
{% endblock %}
